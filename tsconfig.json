{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    }
  },
  "exclude": ["./node_modules"],
  "include": ["types", "src", "./src/**/*"]
}
